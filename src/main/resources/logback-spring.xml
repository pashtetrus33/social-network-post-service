<configuration>
    <!-- Регистрация правила преобразования цветов (обновлённый атрибут) -->
    <conversionRule conversionWord="clr" class="org.springframework.boot.logging.logback.ColorConverter"/>

    <!-- Путь к файлу логов -->
    <property name="LOG_PATH" value="${custom.logging.path:-/var/logs}" />

    <!-- Консольный логгер с цветами -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%clr(%d{yyyy-MM-dd HH:mm:ss}){cyan} [%thread] %clr(%-5level){red} %clr(%logger{36}){blue} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Файловый логгер -->
    <appender name="FileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/post-service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/application-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Уровень логирования контролируется переменной custom.logging.level -->
    <root level="${custom.logging.level:-INFO}">
        <appender-ref ref="Console" />
        <appender-ref ref="FileAppender" />
    </root>
</configuration>