<configuration>

    <property name="LOG_PATH" value="${LOG_PATH:-C:/Users/Pavel/Desktop/logs}"/>
    <!-- <property name="LOG_PATH" value="${LOG_PATH:/var/logs}"/>  -->

    <!-- Консольный аппендер с цветным выводом -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Аппендер для логов в файл с ротацией -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/post-service.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/post-service-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Логирование для всего приложения -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>  <!-- Вывод в консоль с цветами -->
        <appender-ref ref="FILE"/>     <!-- Запись в файл -->
    </root>

</configuration>